#!/usr/bin/bash

echo "db seed load"
seed_path="$(realpath .)/db/seed.sql"
echo $seed_path



if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  CONN_URL=$PROD_CONNECTION_URL
else
  echo "Running in development mode"
  CONN_URL=$CONNECTION_URL
fi

psql $CONNECTION_URL cruddur < $seed_path


